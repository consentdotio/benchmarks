{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": ["TURSO_DATABASE_URL", "TURSO_DATABASE_AUTH_TOKEN"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "fmt": {
      "dependsOn": ["^fmt"]
    },
    "benchmark": {
      "dependsOn": ["^build", "^benchmark"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
